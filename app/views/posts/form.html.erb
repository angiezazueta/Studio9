<div class="row">
  <div class="col-sm-8 col-sm-offset-2">


<h1>Add Photo</h1>
<div class="well bs-component">
<%= form_for @post, html: { multipart: true, class: "custom" } do |f| %>

<form class="form">
  <fieldset>
    <div class="form-group">
      <label for="inputPicture" class="col-lg-2 control-label">Picture</label>
      <div class="col-lg-10">

        <%= f.file_field :picture, class: "form-control", placeholder: "Picture" %>
      </div>
    </div>

    <div class="form-group">
      <label for="inputCaption" class="col-lg-2 control-label">Caption</label>
      <div class="col-lg-10">
        <%= f.text_field :caption, class: "form-control", placeholder: "Caption" %>
      </div>
    </div>


  </fieldset>
</form>
<% end %>
</div>
  </div>
</div>
